@model Craigslist.Models.Listings.ListingPublishingViewModel

@using (Html.BeginForm("Publish")) {
	<div id="publish-ad-validation-summary">
		@Html.ValidationSummary()
	</div>
    <div class="container">
        	<div id="publish-ad-contact-datails" class="row" class="col-md-6">
            <label>Your contact information:</label>
        <form role="form" data-toggle="validator">
            <div class="form-group">
                <label>First Name:</label>
                <input class="form-control" required
            @Html.TextBoxFor(i => i.Listing.Contact.FirstName, new {placeholder = "First Name"}) 
                </div>
            <div class="form-group">
            <label>Last Name:</label>
            <input class="form-control" required
		@Html.TextBoxFor(i => i.Listing.Contact.LastName, new {placeholder = "Last Name"})</div>
           <div class="form-group">
            <label for="InputEmail" class="control-label">Email:</label>
            <input class="form-control" id="InputEmail" data-error="Please enter a valid Email" required
		@Html.TextBoxFor(i => i.Listing.Contact.Email, new {placeholder = "Email", type = "email"})</div>
            <div class="form-group">
            <label>Phone:</label>
            <input class="form-control glyphicon-phone" data-placement="top" data-trigger="manual" required
		@Html.TextBoxFor(i => i.Listing.Contact.Phone, new {placeholder = "(000)000-0000",type="text"})</div>           
            </form>
	</div>
	<div id="publish-ad-topbar" class="row" class="col-md-6"> @*Do we need to have seperate listings  for the ad.Isn't it repititive*@
		<form>
            <div class="form-group">
        <label>Title:</label>
        <input class="form-control" required
		@Html.TextBoxFor(i => i.Listing.Header, new { id = "publish-ad-header" })</div>
        <div class="form-group">
        <label>Categories:</label>
        <select class="form-control"
		@Html.DropDownListFor(i => i.Listing.CategoryId, @Model.Categories)</div>
    </form>
        
	</div>
    <div class="row" class="col-md-6">
        <form> 
              <div class="form-group">
    <label for="Description" class="control-label">Description:</label>
            <textarea class="form-control" placeholder="Add Description" id="Description" rows="5" required
	@Html.TextAreaFor(i=> i.Listing.Body, new {id = "publish-ad-body"})</div>
            <div class="form-group">
                <label for="InputFile">Select Image</label>
                <input type="file" id="InputFile" class="bg-primary">
                <p class="help-block">Please upload the relevant images to post.</p>
            </div>
	<button type="submit" class="btn btn-primary">Publish</button>
        </form>
        </div>
        </div>
    

}
